FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy everything
COPY . .

# âœ… VERY IMPORTANT: use csproj explicitly
RUN dotnet restore RealCordinator.Api.csproj
RUN dotnet publish RealCordinator.Api.csproj -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "RealCordinator.Api.dll"]
